<div class="container p-3 w-100 mt-2" style="max-width: 600px">
    <h5 class="card-title center">Comment <%- comments.length %></h5>

    <div class="card p-3 mb-2 text-white mt-2" style="
    border: #F8F9FA;
    background-color: #F8F9FA;
    box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
  ">


        <% comments.forEach(e=> { %>
            <div class="card m-auto w-100 flex-row justify-content-start p-2 align-items-start mt-2 gap-2">
                <div style="display: flex; flex-direction: column; justify-content: center; align-items: center;  padding: 0;">
                    <img src="<%= e.createdBy.profileImageUrl%>" class="rounded-circle mx-2" style="width: 25px;" />
                    <p style="margin: 0; font-size: x-small; text-align: center;">
                       <%=  e.createdBy.fullName %>
                    </p>
                </div>
                <p class="card-text ">
                    <%= e.content %>
                </p>
            </div>
            <% }) %>
    </div>


    <form class="card m-auto w-100 
        flex-row justify-content-start align-items-center 
        mt-4 p-2 gap-2 " style="max-width: 600px; border: none;
        box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;"
        action="/blog/comment/<%= blog._id %>" method="post">
        <div>
            <img src="<%= user.profileImageUrl%>" class="rounded-circle mx-2" style="width: 25px" />
        </div>

        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
            placeholder="Leave a comment" name="comment">

        <button type="submit" class="btn btn-light">
            <img src="/images/web/send.png" alt="" style="width: 20px;">
        </button>
    </form>
</div>