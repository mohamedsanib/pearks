<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Blogs</title>  
</head>
<body>
    <%- include('./partials/nav') %>

    <main class=" position-relative container-fluid mt-2 p-2">
        <% allblogs.forEach(blog => { %>

        <div class="card m-auto w-100 flex-row justify-content-start p-2 align-items-start mt-2" style="max-width: 600px; box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;">
            
              <img src="<%= blog.createdBy.profileImageUrl %>"  class="" style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover;" >

            <div class="card-body pt-2">
              <h5 class="card-title"><%= blog.title %></h5>
             <img src="<%= blog.postImageUrl %>" class="card-img-top object-fit-xxl-contain" style="height: 250px; object-fit: cover; border-radius: 5px;">
              
              <p class="card-text mt-2"
              style="overflow: hidden;
              text-overflow: ellipsis;
              display: -webkit-box;
              -webkit-line-clamp: 2; /* number of lines to show */
                      line-clamp: 2;
              -webkit-box-orient: vertical;">
                <%= blog.body %>
              </p>
              <a href="/blog/<%= blog._id %>" class="btn btn-dark">View Post</a>
            </div>
        </div>
        
        <% }) %>
    </main>

    <%- include('./partials/addpost') %>

</body>
<%- include('./partials/scripts') %>
</html>  